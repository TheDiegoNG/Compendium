@model IEnumerable<Compendium.Models.Persona>
@{
    var personas = ViewBag.personas;
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<html>
    <head>
        <title>Compendium</title>
    </head>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" asp-action="Index">Compendium</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-link" asp-action="ArcanaList">Arcana List</a>
      <a class="nav-link active" asp-action="PersonaList">Persona List<span class="sr-only">(current)</span></a>
      <a class="nav-link disabled" href="#">Skills List</a>
    </div>
  </div>
</nav>
    <body>
        <br>
        <br>
        <div class="container-fluid">
            <div>
    <h4>Personas</h4> <a class="btn btn-primary" asp-controller="Home" asp-action="PersonaAdd">Añadir Personas</a> <a class="btn btn-primary" asp-controller="Home" asp-action="ArcanaAdd">Añadir Arcanas</a>
    <table>
        <thead>
            <tr><th>Persona</th><th>Arcana</th><th>Nivel</th><th>St</th><th>Ma</th><th>Agu</th><th>Agi</th><th>Su</th></tr>
        </thead>
        <tbody>
            @foreach (Compendium.Models.Persona persona in Model)
                {
                    <tr>
                        <td>@persona.nombre</td>
                        <td>@persona.arcana.nombre</td>
                        <td>@persona.nivel</td>
                        <td>@persona.fuerza</td>
                        <td>@persona.magia</td>
                        <td>@persona.aguante</td>
                        <td>@persona.agilidad</td>
                        <td>@persona.suerte</td>
                    </tr>
                }    
        </tbody>
    </table>
    <hr/>
    </div>
    </div>
    </body>
</html>
